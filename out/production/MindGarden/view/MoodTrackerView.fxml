            <Insets top="20" right="25" bottom="20" left="25" />
        </padding>

        <!-- Header Section -->
        <top>
            <VBox spacing="5" alignment="CENTER">
                <padding>
                    <Insets top="15" bottom="20" />
                </padding>

                <!-- App Header with Logo -->
