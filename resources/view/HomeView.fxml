                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <CheckBox fx:id="meditationGoalCheck" />
                                <Label text="Meditate 3 times" style="-fx-text-fill: #5f6368;"/>
                                <Region HBox.hgrow="ALWAYS" />
                                <Label text="1/3" style="-fx-text-fill: #9575cd; -fx-font-weight: bold;"/>
                            </HBox>
                            <ProgressBar progress="0.33" prefWidth="200" style="-fx-accent: #9575cd;" />
