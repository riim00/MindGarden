                <!-- Feature Cards -->
                <HBox alignment="CENTER" spacing="40">
                    <!-- Mood Tracker Card (Enhanced) -->
                    <VBox alignment="CENTER" spacing="15"
                          style="-fx-background-color: #e3f2fd; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                          prefWidth="220" prefHeight="280">
                        <Label text="ðŸ˜Š" style="-fx-font-size: 42;"/>
                        <Label text="Mood Tracker" style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #1565c0;"/>
                        <Label text="Track your emotions and discover patterns in your mood over time"
                               wrapText="true" textAlignment="CENTER" style="-fx-text-fill: #5f6368;"/>

                        <!-- Mini Mood Chart -->
                        <PieChart fx:id="moodMiniChart" legendVisible="false" prefHeight="80" prefWidth="120"
                                  style="-fx-pie-label-visible: false; -fx-background-color: transparent;" />

                        <Button text="Open Tracker" onAction="#openMoodTracker"
                                style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 30; -fx-font-weight: bold;">
                            <effect>
                                <DropShadow color="#bbdefb" radius="5" spread="0.1"/>
                            </effect>
                        </Button>
                    </VBox>

                    <!-- Journal Card (Enhanced) -->
                    <VBox alignment="CENTER" spacing="15"
                          style="-fx-background-color: #e8f5e9; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 3);"
