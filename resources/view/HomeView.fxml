                <Region HBox.hgrow="ALWAYS" />
                <HBox spacing="20" alignment="CENTER_RIGHT">
                    <Button text="Settings" styleClass="nav-button" onAction="#openSettings"
                            style="-fx-background-color: transparent; -fx-text-fill: #2e7d32; -fx-font-weight: bold;" />
                    <Button text="Help" styleClass="nav-button" onAction="#openHelp"
                            style="-fx-background-color: transparent; -fx-text-fill: #2e7d32; -fx-font-weight: bold;" />
                    <StackPane>
                        <Circle radius="18" fill="#43a047" />
                        <Text text="JS" fill="WHITE" style="-fx-font-weight: bold;" />
                    </StackPane>
                </HBox>
            </HBox>

            <!-- Quick Stats Bar -->
            <HBox alignment="CENTER" spacing="40" style="-fx-background-color: rgba(255,255,255,0.7); -fx-padding: 10 15;">
                <HBox alignment="CENTER" spacing="8">
                    <Label text="Streak:" style="-fx-font-weight: bold; -fx-text-fill: #5f6368;"/>
                    <Label text="7 days" style="-fx-text-fill: #43a047;"/>
                </HBox>
                <HBox alignment="CENTER" spacing="8">
