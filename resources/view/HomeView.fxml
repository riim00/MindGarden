        <VBox>
            <HBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: linear-gradient(to right, #a8e6cf, #dcedc1); -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
