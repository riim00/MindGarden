                            <Label text="Today I felt a sense of accomplishment after..."
                                   style="-fx-font-size: 11; -fx-text-fill: #424242;" wrapText="true" />
                        </VBox>

                        <Button text="Open Journal" onAction="#openJournal"
                                style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 30; -fx-font-weight: bold;">
                            <effect>
                                <DropShadow color="#c8e6c9" radius="5" spread="0.1"/>
                            </effect>
                        </Button>
                    </VBox>

                    <!-- Meditation Card (Enhanced) -->
                    <VBox alignment="CENTER" spacing="15"
                          style="-fx-background-color: #fce4ec; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                          prefWidth="220" prefHeight="280">
