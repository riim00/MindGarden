                            </HBox>
                            <ProgressBar progress="0.4" prefWidth="200" style="-fx-accent: #9575cd;" />
                        </VBox>

                        <Button text="Set New Goal" onAction="#openGoalSetting"
                                style="-fx-background-color: #9575cd; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 15;">
                            <effect>
                                <DropShadow color="#d1c4e9" radius="5" spread="0.1"/>
                            </effect>
                        </Button>
